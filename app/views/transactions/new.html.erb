<div class="container mt-5">
  <h1 class="mb-4">New Transaction</h1>

  <%= form_with(model: @transaction, local: true, class: "needs-validation") do |form| %>
    <div class="form-group">
      <%= form.label :source_wallet_number, "Sender Wallet", class: "form-label" %>
      <%= form.number_field :source_wallet_number, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :target_wallet_number, "Receiver Wallet", class: "form-label" %>
      <%= form.number_field :target_wallet_number, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :amount, class: "form-label" %>
      <%= form.number_field :amount, class: "form-control", required: true, step: "0.01" %>
    </div>

    <div class="form-group">
      <%= form.label :transaction_type, class: "form-label" %>
      <%= form.select :transaction_type, [["Transfer", "transfer"], ["Topup", "topup"], ["Purchase", "purchase"]],
            { prompt: "Select a transaction type" }, 
            { class: "form-control", required: true } %>
    </div>

    <div class="form-group">
      <%= form.label :notes, "Transaction Notes", class: "form-label" %>
      <%= form.text_area :notes, class: "form-control", rows: 3 %>
    </div>

    <div class="mt-4">
      <%= form.submit "Create Transaction", class: "btn btn-primary" %>
      <%= link_to "Back", transactions_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
